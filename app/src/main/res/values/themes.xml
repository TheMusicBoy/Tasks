<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoogleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TaskDetailsHeader">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="color">@color/material_dynamic_neutral_variant60</item>
    </style>

    <style name="TaskEditText">
        <item name="android:layout_marginTop">10sp</item>
        <item name="color">@color/material_dynamic_neutral_variant80</item>
    </style>

    <style name="SubTextIcons">
        <item name="android:layout_margin">15sp</item>
    </style>

    <style name="TaskListItemField">
        <item name="android:textSize">20sp</item>
        <item name="color">@color/material_dynamic_neutral_variant80</item>
        <item name="singleLine">true</item>
        <item name="android:layout_margin">2sp</item>
    </style>

</resources>